<p id="notice">
	<%= flash[:notice] %>
</p>

<h1>Books</h1>

<thead>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<colgroup span="2"></colgroup>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |t| %>
			<tr>
			   	<td><%= t.title %></td>
				<td><%= t.body %></td>
				<td><%= link_to "Show", book_path(t)%></td>
				<td><%= link_to "Edit", edit_book_path(t) %></td>
				<td><%= link_to "Destory",book_path(t), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
			</tr>
			<% end %>


		</tbody>
	</table>
</thead>



<h2>New book</h2>
<% if @book.errors.any? %>
<div class= "alert alert-warning">
    <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>

    <ul>
    	<% @book.errors.full_messages.each do |message| %>
	    	<li><%= message %></li>

    	<% end %>
